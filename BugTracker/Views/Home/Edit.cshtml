@model BugTracker.Models.Bug
@{
    ViewBag.Title = "Изменение бага № " + @Model.Id.ToString();
}
<h3>Изменение Бага № @Model.Id.ToString()</h3>
<form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание</label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <p>
        <style>
            select {
                width: 90px;
                height: 30px
            }
        </style>
        Статус
        @Html.DropDownList("status", new[]
            {
                    new SelectListItem(){ Selected = (Model.Status == "New"), Text = "New", Value = "New"},
                    new SelectListItem(){ Selected = (Model.Status == "In Order"), Text = "In Order", Value = "In Order"},
                    new SelectListItem(){ Selected = (Model.Status == "Done"), Text = "Done", Value = "Done"}
            })
     </p>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>
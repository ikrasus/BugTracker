@model BugTracker.Models.Improvement
@{
    ViewBag.Title = "Добавление задачи";

}

<form asp-action="Create" asp-controller="Solve">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание</label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CurrentStatus" class="control-label">Текущий статус</label>
        <input type="text" asp-for="CurrentStatus" value="new" class="form-control" />
    </div>
    <div class="form-group">
        <label name="statuses" class="control-label">Перечислите статусы для данной задачи</label>
        <input type="text" name="statuses" class="form-control" />
    </div>
    <div class="form-group">

    </div>

    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default" />
    </div>
</form>